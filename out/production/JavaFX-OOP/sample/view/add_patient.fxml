                        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="17.0" layoutY="10.0" onMouseClicked="#handlerPatient" pickOnBounds="true" preserveRatio="true" style="-fx-opacity: 1;">
                            <image>
                                <Image url="@../image/add_task.png" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
