                  <TextField fx:id="studentID" layoutX="80.0" layoutY="120.0" prefHeight="40.0" prefWidth="220.0" promptText="Student ID">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </AnchorPane>
            <TextField fx:id="DiseaseTxt" layoutX="360.0" layoutY="120.0" prefHeight="40.0" prefWidth="320.0" promptText="Patient Disease">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
