        <AnchorPane prefHeight="480.0" prefWidth="135.0">
            <children>
                <AnchorPane prefHeight="120.0" prefWidth="135.0" style="-fx-border-color: #000000;">
                    <children>
                        <ImageView fitHeight="90.0" fitWidth="90.0" layoutX="22.0" layoutY="15.0" onMouseClicked="#handlerHome" pickOnBounds="true" preserveRatio="true" style="-fx-opacity: 0.7;">
                            <image>
                                <Image url="@../image/home.png" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
                <AnchorPane layoutY="120.0" prefHeight="120.0" prefWidth="135.0" style="-fx-border-color: #000000;">
                    <children>
                        <ImageView fitHeight="90.0" fitWidth="90.0" layoutX="22.0" layoutY="15.0" onMouseClicked="#handlerHistory" pickOnBounds="true" preserveRatio="true" style="-fx-opacity: 0.7;">
